<%= form_tag sessions_path do %>
<div class="hero-unit">
        <h1>Welcome to BookKarma!</h1>
        <p>BookKarma is a site for students by students.  Trade your books for karma and trade your karma for books!</p>
      </div>
	<%= content_tag(:div, flash[:error], class: "alert alert-error") if flash[:error] %>
	<%= content_tag(:div, flash[:success], class: "alert alert-success") if flash[:success] %>
      <div class="out">
      <div class="row">
        <div class="span6">
          <h2>Log In</h2>
           	
           	<span class="inline"> <%= label_tag :email %> <%= text_field_tag :email %> </span>

		<span class="inline"> <%= label_tag :password %> <%= password_field_tag :password %> </span>
		<span> <%= submit_tag "Log in" %> </span>
	
          
        </div>
        <span class="span6">
          <h2>Not A Member? Sign up!</h2>
           <p><a class="btn btn-primary btn-large">Register Now &raquo;</a></p>
       </span>
     
      </div>
      </div>
<% end %>
