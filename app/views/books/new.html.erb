<%= form_tag books_path do %>

	<%= content_tag(:div, flash[:error], class: "alert alert-error") if flash[:error] %>
	<%= content_tag(:div, flash[:success], class: "alert alert-success") if flash[:success] %>

	<%= label_tag :author %>
	<%= text_field_tag :author %>

	<%= label_tag :isbn %>
	<%= text_field_tag :isbn %>

	<%= submit_tag "success" %>

<% end %>